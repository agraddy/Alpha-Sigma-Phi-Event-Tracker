<html>
    <head>
        <link rel="shortcut icon" type="image/x-icon" href="../img/favicon.ico" />
        <title>ΑΣΦ Events</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="css/style.css" />
    </head>
    
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img src="../img/asp.png" style="height: 50px; margin-top: -15px;">
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Login</a></li>
                        <li><a href="#">Signup</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <h1 style="text-align: center;">Post an event!</h1>
                <div style="width: 40%; margin: 40px auto;">
                    <form action="/events" method="POST">
                        <div class="form-group">
                            Name: <br>
                            <input class="form-control" type="text" name="name" placeholder="Name" required>
                        </div>
                        
                        <div class="form-group">
                            Description: <br>
                            <input class="form-control" type="text" name="desc" placeholder="Description" required>
                        </div>
                        
                        <div class="form-group">
                            Type: <br>
                            <input type="radio" name="type" value="Cardinal"> Cardinal
                        </div>
                        
                        <div class="form-group">
                            <input type="radio" name="type" value="Stone"> Stone
                        </div>
                        
                        <div class="form-group">
                            <input type="radio" name="type" value="N/A" checked> N/A
                        </div>
                        
                        <div class="form-group">    
                            Datetime: <br>
                            <input class="form-control" type="datetime-local" name="datetime" placeholder="Date & Time" required>
                        </div>
                        
                        <div class="form-group">    
                            Location: <br>
                            <input class="form-control" type="text" name="place" placeholder="Location" required>
                        </div>
                        <div class="form-group">    
                            Image URL: <br>
                            <input class="form-control" type="text" name="image" placeholder="Image URL" required>
                        </div>

                        <div class="form-group">    
                            Venues: <br>
				<% venues.forEach(function(venue) { %>
				<label><input type="checkbox" name="venues[]" value="<%= venue._id %>;<%= venue.name %>" /> <%= venue.name %></label>
				<% }); %>
			  </select>
                        </div>
                            
                        <div class="form-group">    
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/events">Go to Events</a>
                </div>
            </div>
        </div>
<% include ../partials/footer %>
